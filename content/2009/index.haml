<h2><%= h(@page.title) %></h2>

<ul id="entries">
  <%
    articles = @pages.find(:all, :in_directory => @page.dir, :recursive => true,
        :sort_by => "created_at", :reverse => true, :blog_post => true)
    articles.delete(@page)
    paginate(articles, 10) do |page|
  -%>
  <li class="entry">
    <h2><%= link_to_page(page) %></h2>

    <div class="body">
      <%= render(page) %>
    </div>
  </li>
</ul>
<% end -%>
